{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "properties": {
            "prefix": "\n",
            "wsl": "",
            "wsl_separator": ""
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "green",
          "properties": {
            "style": "folder",
            "prefix": ""
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "magenta",
          "properties": {
            "branch_icon": "",
            "tag_icon": "",
            "prefix": ""
          }
        },
        {
          "type": "command",
          "style": "plain",
          "foreground": "yellow",
          "properties": {
            "shell": "sh",
            "command": "bash -c 'if [[ -n $(git status -s 2> /dev/null) ]]; then echo \"\u6c59\"; fi'",
            "prefix": ""
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "darkGray",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "prefix": ""
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "properties": {
            "prefix": "",
            "always_numeric": true,
            "error_color": "red"
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "darkGray",
          "properties": {
            "prefix": "",
            "postfix": ""
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "default",
          "properties": {
            "postfix": "",
            "prefix": "",
            "text": "{{if not .Root}}${{end}}{{if .Root}}<red>#</>{{end}}"
          }
        }
      ]
    }
  ],
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "grey",
    "template": "\n{{if not .Root}}${{end}}{{if .Root}}<red>#</>{{end}} "
  }
}
